<h1>
  Actor #<%= @the_actor.first.id %> details
</h1>

<a href="/actors" class="btn btn-block btn-outline-secondary">
  Go back
</a>

&nbsp;|&nbsp;

<hr>

<dl>
  <dt>
    Name
  </dt>
  <dd>
    <%= @the_actor.first.name %>
  </dd>

  <dt>
    Dob
  </dt>
  <dd>
    <%= @the_actor.first.dob %>

  </dd>

  <dt>
    Bio
  </dt>
  <dd>
    <%= @the_actor.first.bio %>
  </dd>

  <dt>
    Image
  </dt>
  <dd>
     <img src ="<%= @the_actor.first.image %>">
  </dd>

  <dt>
    Created at
  </dt>
  <dd>
    <%= time_ago_in_words(@the_actor.first.created_at) %> ago
  </dd>

  <dt>
    Updated at
  </dt>
  <dd>
    <%= time_ago_in_words(@the_actor.first.updated_at) %> ago
  </dd>
</dl>








<h2>Filmography</h2>

<table border="1">

<% @filmography.each do |a_film| %>
<tr>
  <td>
    <%= Movie.where({ :id => a_film.movie_id}).first.title %>
  </td >
    <td>
    <%= Movie.where({ :id => a_film.movie_id}).first.year %>
  </td >
    <td>
    <%= Director.where({ :id => a_film.movie_id}).first.name %>
  </td >
      <td>
    <%= a_film.name%>
  </td >
    <td>
      <a href= "/movies/<%= a_film.id %>">
      Show details
      </a>
   </td>
</tr>
<% end %>
</table>
